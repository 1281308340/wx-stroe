/* pages/myBooks/myBooks.wxss */

/*页面样式*/
page {
  height: 100%;
  width: 100%;
  background-color: #f2f2f2;
}

/*跟视图样式*/
.mainViewClass {
  width: 100%;
  height: 100%;
  font-family: "Microsoft YaHei";
}


/*用户头像模块样式*/
.userAvatar {
  display: flex;
  margin-top: 28rpx;
  padding: 60rpx;
  background-color: #ffffff;
  border: 2rpx solid #ffa589;
}

/*用户头像*/
.userAvatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #ffa589;
}

/*头像布局*/
.userAvatar view {
  display: flex;
  flex-direction: column;
  padding-left: 48rpx;
}

/*用户名字*/
.userAvatar .nickName {
  font-size: 50rpx;
  margin-bottom: 12rpx;
  font-weight: bold;
}

/*名人名言*/
.userAvatar .motto {
  font-size: 28rpx;
  color: #ffa589;
}


/*我收藏的书籍 栏目样式*/
.booksList {
  margin-top: 32rpx;
  padding: 16rpx 48rpx 30rpx 48rpx;
  background-color: #fff;
  border: 2rpx solid #ffa589;
  min-height: 999rpx;
}

/*顶部标题模块样式*/
.booksList .top-bar {
  display: flex;
  align-items: flex-end;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #ffa589;
}

/*心 图片样式*/
.booksList .top-bar image {
  width: 48rpx;
  height: 48rpx;
}

/*我收藏的书籍  文本样式*/
.booksList .top-bar text {
  font-size: 32rpx;
  padding-left: 20rpx;
  color: #525252;
}

/*未收藏 提示 图片和文本的样式*/
.booksList .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.booksList .empty image {
  margin: 40rpx;
  width: 180rpx;
  height: 180rpx;
}

.booksList .empty text {
  font-size: 36rpx;
  font-weight: bold;
  color: #dfdfdf;
}